{
  "compilerOptions": {
    "target": "es2017",                            // JS version to compile to
    "module": "commonjs",                          // Module system (Node.js uses commonjs)
    "rootDir": "src",                              // Source files location
    "outDir": "dist",
    // "types": ["node"],                              // Output folder
    "esModuleInterop": true,                       // Allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,      // Helps avoid case-related bugs (esp. on Linux/macOS)
    "strict": true,                                // Enable all strict type-checking
    "skipLibCheck": true                           // Skip type checking of .d.ts files for speed
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
