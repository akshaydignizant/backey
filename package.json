{
  "name": "backey-backend",
  "version": "1.0.0",
  "description": "backend for backey-management",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx tsc",
    "dev": "cross-env NODE_ENV=development nodemon --legacy-watch src/server.ts",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --fix",
    "prepare": "husky",
    "migrate:dev": "cross-env MIGRATE_MODE=development node script/migration.js",
    "migrate:prod": "cross-env MIGRATE_MODE=production node script/migration.js"
  },
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "@redis/client": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "colorette": "^2.0.20",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "dotenv-flow": "^4.1.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.10.0",
    "pg": "^8.14.1",
    "rate-limiter-flexible": "^7.0.0",
    "source-map-support": "^0.5.21",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/dotenv-flow": "^3.3.3",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/logform": "^1.2.0",
    "@types/node": "^22.14.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.11",
    "@types/source-map-support": "^0.5.10",
    "@types/winston": "^2.4.4",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "prisma": "^6.6.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
